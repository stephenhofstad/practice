puts "Enter a word please."
word = gets.chomp.upcase
puts word

puts "Enter a number"
number = gets.chomp.to_i
if number > 100
  puts "THAT'S A BIG NUMBER!"
end

puts "enter a number."
number1 = gets.chomp.to_i
puts "enter a number."
number2 = gets.chomp.to_i
number1 = number1 + number2
p number1

puts "enter a word"
word = gets.chomp.reverse
p word

puts "enter a number"
number = gets.chomp.to_i
puts number * 10

